{
    "app-id": "dev.linwood.butterfly",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "22.08",
    "sdk": "org.freedesktop.Sdk",
    "command": "butterfly",
    "separate-locales": false,
    "finish-args": [
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri",
        "--share=network"
    ],
    "modules": [
        {
            "name": "libjsoncpp",
            "buildsystem": "meson",
            "config-opts": [
                "--buildtype=release",
                "--default-library=shared"
            ],
            "only_arches": [
                "x86_64"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/open-source-parsers/jsoncpp/archive/refs/tags/1.9.5.tar.gz",
                    "sha256": "f409856e5920c18d0c2fb85276e24ee607d2a09b5e7d5f0a371368903c275da2"
                }
            ]
        },
        {
            "name": "libsecret",
            "buildsystem": "meson",
            "config-opts": [
                "-Dmanpage=false",
                "-Dvapi=false",
                "-Dgtk_doc=false",
                "-Dintrospection=false"
            ],
            "cleanup": [
                "/bin",
                "/include",
                "/lib/pkgconfig",
                "/share/man"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/0.20.5/libsecret-0.20.5.tar.gz",
                    "sha256": "b33b9542222ea8866f6ff2d31c0ad373877c2277db546ca00cc7fdda9cbab1c3",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 13150,
                        "url-template": "https://gitlab.gnome.org/GNOME/libsecret/-/archive/$version/libsecret-$version.tar.gz"
                    }
                }
            ]
        },
        {
            "name": "butterfly",
            "buildsystem": "simple",
            "build-commands": [
                "cp -r FlutterApp /app/",
                "chmod +x /app/FlutterApp/butterfly",
                "mkdir -p /app/bin",
                "ln -s /app/FlutterApp/butterfly /app/bin/butterfly",
                "install -Dm644 /app/FlutterApp/usr/share/metainfo/dev.linwood.butterfly.appdata.xml ${FLATPAK_DEST}/share/metainfo/${FLATPAK_ID}.metainfo.xml",
                "install -Dm644 /app/FlutterApp/dev.linwood.butterfly.svg -t ${FLATPAK_DEST}/share/icons/hicolor/scalable/apps/",
                "install -Dm644 /app/FlutterApp/usr/share/applications/dev.linwood.butterfly.desktop -t ${FLATPAK_DEST}/share/applications/",
                "install -Dm644 /app/FlutterApp/usr/share/mime/packages/dev.linwood.butterfly.xml ${FLATPAK_DEST}/share/mime/packages/${FLATPAK_ID}.xml"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://github.com/LinwoodCloud/Butterfly/releases/download/v1.6.1/linwood-butterfly-linux.tar.gz",
                    "sha256": "9517f3c8535cb3608bc2c6b9502a92af9015d9ee9ee233a1a0731fa99f0325ab",
                    "dest": "FlutterApp",
                    "x-checker-data": {
                        "type": "json",
                        "url": "https://api.github.com/repos/LinwoodCloud/Butterfly/releases/latest",
                        "version-query": ".tag_name",
                        "url-query": ".assets[] | select(.name==\"linwood-butterfly-linux.tar.gz\") | .browser_download_url"
                    }
                }
            ]
        }
    ]
}
